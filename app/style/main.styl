radioInput(){
  .option-input {
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    -o-appearance: none;
    appearance: none;
    width $rem(20px);
    height $rem(20px);
    display inline-block;
    margin-right: 0.5rem;
    outline none;
    background #fff;
    border $rem(2px) solid #e8e8e8;
    color #fff;
    cursor pointer;
    position relative;
    top 0 
    z-index: 1000;
  }
  .option-input.radio {
    border-radius: 50%;
  }
  .option-input.radio::after {
    border-radius: 50%;
  }
  .option-input:checked::before {
    width $rem(10px)
    height $rem(10px)
    border-radius $rem(5px)
    background $dark-yellow-color
    position: absolute
    left 50%
    top 50%
    margin-left $rem(-5px)
    margin-top $rem(-5px)
    display: inline-block;
    content: '';
  }
}
lafe-intro-item(isHaveSelect=100%){
  .lafe-intro-item{
    display flex
    margin-bottom $rem(8px)
    .left{
      width 10%
      background $grey-background-color
      text-align center
      line-height $rem(104px)
      display flex
      align-items center
    }
    .left input{
      left 50%
      margin-left $rem(-12px)
    }
    
    .main{
      width isHaveSelect
      display flex
      background $grey-background-color
      padding $rem(10px)
      .picture{
        width 24%
        justify-content center
        align-items center
        display flex
        img{
          width 100%
        }
      }
      .note{
        width 76%
        display flex
        flex-direction column
        justify-content space-between
        margin $rem(10px 25px)
      }
      .note h4{
        margin $rem(0)
        color $black-color
        setFontSize($font-size-20)
        
      }
      .cont{
        display flex
        justify-content space-between
        align-items center
      }
      .cont em{
        color $dark-yellow-color
        setFontSize($font-size-24)
        font-style normal
      }
      .cont .strong{
        @extend .btn-width-radius
        setFontSize($font-size-24)
        font-weight normal
      }
      .cont strong{
        font-weight normal
      }
    }
  }
}

addFooter(){
  .footer{
    width 100%
    height $rem(88px)
    display flex
    position absolute
    left 0
    bottom 0
    z-index 999999
    .left{
      padding $rem(30px)
      width 64%
      display flex
      align-items center
      background $grey-background-color
    }
    .left label{
      margin-left 20px
      setFontSize($font-size-20)
      color $grey-color
    }
    .right{
      width 36%
      border-right $rem(1px) solid #fad398
      $background-gradient($light-yellow-color,$dark-yellow-color)
      text-decoration none
      color $white-color
      setFontSize($font-size-30)
      text-align center
      justify-content center
      align-items center
      display flex
      &:last-child{
        border 0
      }
    }
  }
}
addSearchBox(){
  .search-box{
    height $rem(42px)
    line-height $rem(42px)
    input::-webkit-input-placeholder{
      setFontSize($font-size-18)
    }
    .search{
      width 100%
      height 100%
      line-height 100%
      border none
      border-radius $border-radius-big
      setFontSize($font-size-24)
      background-color #565656
      text-indent $rem(26px)
      padding 0
      display block
    }
    .search-flag{

    }
  }
}
addNavigator(){
  .navigator{
    display flex
    border-bottom $rem(1px) solid $grey-background-color
    li{
      flex 1
      text-align center
      color #6b6b6b
      //$text-gradient($light-yellow-color,$dark-yellow-color)
      setFontSize($font-size-20)

      padding $rem(15px 0px)
      border-right $rem(1px) solid $grey-background-color
    }
    .active{
      border-bottom $rem(4px) solid #fff
    }
  }
}
addBottomNavigator(){
  .navigator{
    display flex
    border-top $rem(1px) solid $grey-background-color
    height $rem(74)
    width 100%
    li{
      flex 1
      text-align center
      //$text-gradient($light-yellow-color,$dark-yellow-color)
      setFontSize($font-size-14)
      border-right $rem(1px) solid $grey-background-color
      display flex
      flex-direction column 
      em,strong{
        display block
        align-items center
        justify-content center
        display flex 
      }
      em{
        flex 2
        color #f4ac3a
        setFontSize($font-size-30)
        align-items flex-end
      }
      strong{
        flex 1
        color #6b6b6b
        font-weight normal
        align-items flex-start
      }
    }
    .active{
      background-color #f4ac3a
      em,strong{
        color $white-color
      }
    }
  }
}
  


