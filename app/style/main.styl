@import 'qst/all'
@import 'config'

$viewsize()
$global-normalize()
$oocss(true)

p{margin:0;padding:0}
body{
  overflow-scrolling touch
  -webkit-overflow-scrolling touch
  max-width $rem(640px)
  min-width $rem(320px)
  i{
    font-style normal
  }
  .hide{
    display none
  }
  .wrap{
    width 100%
    height 100%
    max-width $rem(640px)
    margin 0 auto
    position absolute
    top 0
    left @top
    right @top
    bottom @top
    overflow-y scroll
    overflow-x hidden
  }
}

/*
* 该版风格用到的样式定义
********************************/

$font-size-24 = $rem(24px)
$font-size-20 = $rem(20px)
$font-size-34 = $rem(34px)
$font-size-30 = $rem(30px)
$font-size-36 = $rem(20px)
$font-size-18 = $rem(18px)
$font-size-36 = $rem(36px)

$image-correct = "../image/buyresult/buy-result_01.png"
$black-background-color = #2b2b2b
$grey-background-color = #f5f5f5
$brown-border = $rem(1px) solid #1c1a1c

$light-yellow-color = rgba(253,183,82,1.0)
// $dark-yellow-color = rgba(199,125,32,1.0)
$dark-yellow-color = rgba(227,143,3,1.0)
$white-color = #fff
$black-color = #303030
$grey-color = #7f7f7f

$border-radius-default = $rem(5px)
$border-radius-big = $rem(20px)

setFontSize(size){
  font-size size
}

/*该版风格用到的布局:即用在特定区块用以实现某种排版的样式
**************************************************/
$header-height = $rem(70px)
.margin-left-right-default{
  margin 0 $rem(28px)
}

/*********自定义的可重用界面组件************/
.text-center{
  text-align center
}
.text-left{
  text-align left
}
.text-right{
  text-align right
}

.header{
  height $header-height
  line-height $header-height
  background-color $black-background-color
  border-top $brown-border
  position relative
  h1{
    @extend .text-center
    margin 0
    setFontSize($font-size-30)
    $text-gradient($light-yellow-color,$dark-yellow-color)
  }
  .button{
    $text-gradient($light-yellow-color,$dark-yellow-color)
    setFontSize($font-size-24)
    position absolute
    right $rem(20px)
    top $rem(0px)
  }
}

.flag-success{
  width $rem(170px)
  height $rem(170px)
  background no-repeat 0 0
  background-image $image-correct
  background-size contain
}

.btn{
  padding $rem(10px) $rem(20px)
  color $white-color
  border-radius $border-radius-default
  display inline-block
  $background-gradient($light-yellow-color,$dark-yellow-color)
}
.btn-width-radius{
  padding $rem(5px) $rem(20px)
  color $dark-yellow-color
  border-radius $border-radius-big
  display inline-block
  border $rem(1px) solid $light-yellow-color
  $text-gradient($light-yellow-color,$dark-yellow-color)
}

radioInput(){
  .option-input {
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    -o-appearance: none;
    appearance: none;
    width: $rem(20px);
    height: $rem(20px);
    display: inline-block;
    margin-right: 0.5rem;
    outline: none;
    background: #fff;
    border: $rem(1px) solid #eee;
    color: #fff;
    cursor: pointer;
    position: relative;
    top :0 
    z-index: 1000;
  }
  .option-input.radio {
    border-radius: 50%;
  }
  .option-input.radio::after {
    border-radius: 50%;
  }
  .option-input:checked::before {
    width $rem(10px);
    height $rem(10px);
    border-radius: 50%;
    border $rem(1px) solid grey-color
    background $dark-yellow-color
    position: absolute;
    left 50%
    top 50%
    margin-left $rem(-5px)
    margin-top $rem(-5px)
    display: inline-block;
    content: '';
  }
}
lafe-intro-item(isHaveSelect=100%){
  .lafe-intro-item{
    display flex
    margin-bottom $rem(8px)
    .left{
      width 10%
      background $grey-background-color
      text-align center
      line-height $rem(104px)
      display flex
      align-items center
    }
    .left input{
      left 50%
      margin-left $rem(-12px)
    }
    
    .main{
      width isHaveSelect
      display flex
      background $grey-background-color
      padding $rem(10px)
      .picture{
        width 24%
        justify-content center
        align-items center
        display flex
      }
      .note{
        width 76%
        display flex
        flex-direction column
        justify-content space-between
        margin $rem(10px 25px)
      }
      .note h4{
        margin $rem(0)
        color $black-color
        setFontSize($font-size-20)
        
      }
      .cont{
        display flex
        justify-content space-between
        align-items center
      }
      .cont em{
        color $dark-yellow-color
        setFontSize($font-size-24)
        font-style normal
      }
      .cont .strong{
        @extend .btn-width-radius
        setFontSize($font-size-24)
        font-weight normal
      }
      .cont strong{
        font-weight normal
      }
    }
  }
}

addFooter(){
  .footer{
    width $rem(640px)
    height $rem(70px)
    display flex
    position fixed
    left 0
    bottom 0
    .left{
      padding $rem(30px)
      width 64%
      display flex
      align-items center
      background $grey-background-color
    }
    .left label{
      margin-left 20px
      setFontSize($font-size-20)
      color $grey-color
    }
    .right{
      width 36%
      $background-gradient($light-yellow-color,$dark-yellow-color)
      text-decoration none
      color $white-color
      setFontSize($font-size-30)
      text-align center
      justify-content center
      align-items center
      display flex
    }
  }
}
addSearchBox(){
  .search-box{
    height $rem(42px)
    line-height $rem(42px)
    input::-webkit-input-placeholder{
      setFontSize($font-size-18)
    }
    .search{
      width 100%
      height 100%
      line-height 100%
      border none
      border-radius $border-radius-big
      setFontSize($font-size-24)
      background-color #565656
      text-indent $rem(26px)
      padding 0
      display block
    }
    .search-flag{

    }
  }
}
addNavigator(){
  .navigator{
    display flex
    border-bottom $rem(1px) solid $grey-background-color
    li{
      flex 1
      text-align center
      $text-gradient($light-yellow-color,$dark-yellow-color)
      setFontSize($font-size-20)

      padding $rem(15px 0px)
      border-right $rem(1px) solid $grey-background-color
    }
  }
}
  


/*各相关页面样式
*********************************************************/  
.buy-result{  
  .success{
    margin-top $rem(105px)
    text-align center
  }
  
  .message{
    margin-top $rem(30px)
    text-align center
    .info01{
      color $black-color
      setFontSize($font-size-34)
    }
    .info02{
      color $grey-color
      setFontSize($font-size-20)
      margin-top $rem(20px)
    }
    strong{
      setFontSize($font-size-24)
    }
  }
  .button-frame{
    margin-top $rem(40px)
    @extend .text-center
    .button{
      @extend .btn
      text-decoration none
    }
    .back{
      margin-left $rem(30px)
    }
  }
}

.news{
  .content{
    @extend .margin-left-right-default
  }
  .title{
    margin $rem(20px) 0
    color $black-color
    setFontSize($font-size-30)
  }
  .create-time{
    color $grey-color
    setFontSize($font-size-18)
    margin 0 0 $rem(15px) 0
  }
  .text{
    margin $rem(20px)
    color $grey-color
    setFontSize($font-size-18)
    line-height $rem(28px)
  }
}

.my-favorite{
  lafe-intro-item(90%)
  .list{
    margin-top $rem(30px)
    @extend .margin-left-right-default
  }
  addFooter()
}

.buy-card{
  lafe-intro-item(90%)
  .list{
    margin-top $rem(30px)
    @extend .margin-left-right-default
  }
  .item{
    border $rem(1px) solid $grey-background-color
    border-radius $border-radius-default
    padding $rem(10px)
    margin-bottom $rem(10px)
    .left{
      background-color transparent
    }
  }
  addFooter()
  .item-head{
    padding $rem(5px 0px 10px 0px)
    border-bottom $rem(1px) solid $grey-background-color
    display flex
    justify-content space-between
    margin-bottom $rem(10px)
    .left{
      display flex
      align-items center
      $text-gradient($light-yellow-color,$dark-yellow-color)
    }
    .left label{
      vertical-align middle
    }
    .right{
      text-decoration none
      color $dark-yellow-color
    }
  }
  .item-footer{
    padding $rem(5px 0px)
    color $grey-color
    setFontSize($font-size-18)
    text-align right
    em{
      setFontSize($font-size-24)
      font-style normal
    }
  }
  .footer .left{
    em{
      font-style normal
      color $dark-yellow-color
      setFontSize($font-size-18)
    }
    strong{
      font-weight normal
      color $dark-yellow-color
      setFontSize($font-size-36)
    }
  }
}


.search-result{
  .header{
    position relative
    left $rem(0px)
    top $rem(0px)
    addSearchBox()
    .search-box{
      position absolute
      right $rem(10px)
      top 50%
      width 62.5%
      margin-top $rem(-21px)
    }
  }
  lafe-intro-item(100%)
  addNavigator()
  .cont{
    margin-top $rem(20px)
    @extend .margin-left-right-default
  }
}
.my-order{
  addNavigator()
  lafe-intro-item(100%)
  .cont{
    margin-top $rem(20px)
    @extend .margin-left-right-default
  }
  .list{
    margin-top $rem(15px)
  }
  .item{
    border-bottom $rem(1px) solid $grey-background-color
    margin-bottom $rem(15px)
  }
  .item-header{
    display flex
    justify-content space-between
    padding $rem(5px 30px)
    border-top $rem(1px) solid $grey-background-color
    border-bottom $rem(1px) solid $grey-background-color
    .left{
      width 80%
    }
    .right{
      width 20%
      display block
      setFontSize($font-size-20)
      font-weight normal
    }
    
    .order-no,.time,right{
      display block
      setFontSize($font-size-20)
      font-weight normal
    }
  }
  .item-body{
    margin-top $rem(10px)
    @extend .margin-left-right-default
  }
}
