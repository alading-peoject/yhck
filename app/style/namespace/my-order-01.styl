@import '../qst/all'

@import '../common/variable'
@import '../common/commponent'

.my-order-01{
  width 100%
  height 100%
  overflow-x hidden
  overflow-y scroll
  hr{
    width 92%
    margin $rem(20px) auto 0 !important
    height:1px;
    border:none;
    border-top:1px solid #e8e8e8;
  }
  .content{
    width 92%
    margin 0 auto
    .shop-list{
      border 1px solid #e8e8e8;
      border-radius $border-radius-big
      margin $rem(20px) auto
      &:last-child{
        margin-bottom $rem(120px)
      }
      .title{
        width 92%
        margin 0 auto
        display flex
        flex-direction row
        justify-content space-between
        flex-wrap nowrap
        padding $rem(15px 0)
        border-bottom 1px solid #e8e8e8;
        font-size $rem(18px)
        .name{
          color #e38f03
          img{
            width $rem(24px)
            height $rem(23px)
          }
        }
        .status{
          margin-right 5%
          color #7f7f7f
        }
      }
      .order{
        width 92%
        margin $rem(20px) auto
        padding $rem(10px 0)
        background #f5f5f5
        .describ{
          width 70%
          float right
          margin 0 2% 0 0
          .top{
            //margin-top $rem(20px)
            display flex
            flex-direction row
            flex-wrap nowrap
          }
          .top{
            justify-content space-around
            .text{
              font-size $rem(18px) !important
            }
          }
          .bottom{
            justify-content flex-start
            position relative
            span{
              font-size $rem(14px)
              color $common-text-color
              display block
              padding-top $rem(20px)
            }
            a{
              position absolute
              top $rem(15px)
              addBtnWidthRadius()
              setFontSize($font-size-24)
              font-weight normal
              margin-left $rem(10px)
              &.service{
                right 40%
              }
              &.again{
                right 0
              }
            }
          }
        }
        .img-a{
          width 25%
          float left
        }
        img{
          width 90%
          display block
          margin $rem(10px 10px)
        }
      }
      .total{
        margin $rem(20px)
        text-align right
        p{
          font-size $rem(24px)
          &:first-child{
            border-bottom 1px solid #e8e8e8;
            padding-bottom $rem(10px)
            margin-bottom $rem(10px)
          }
          &:last-child{
            color #d89334
          }
        }
      }
    }
  }
}
