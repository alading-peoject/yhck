  }
}

.logo-search-bar{
    position absolute
    width 100%
    background rgba(0,0,0,.6)
    z-index 999
    .logo{
      display inline-block
      padding $rem(25px 20px)
      img{
        width $rem(160px)
        height $rem(36px)
      }
    }
    .search{
      display inline-block
      input{
        position absolute
        right $rem(20px)
        -webkit-transform translateY(-67%)
        transform translateY(-67%)
        outline none
        border 0
        background rgba(225,225,225,0.2) url('../image/index/index-serch.png') no-repeat 5% center
        width 40%
        height 55%
        line-height @height
        border-radius $rem(25px)
        padding 0 10%
        background-size $rem(30px 30px)
        font-size $rem(24px)
        color #fff
      }
      input::-webkit-input-placeholder {
        color: #b5b5b5;
      }
      input::input-placeholder { 
        color: #b5b5b5;
      }
    }
}

.flag-success{
