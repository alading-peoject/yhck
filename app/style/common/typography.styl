//置顶
.public-center-vertical{
  position absolute
  top 0
  left @top
}

//置底
.public-center-vertical{
  position absolute
  bottom 0
  left @bottom
}

//垂直居中
.public-center-vertical{
  position absolute
  top 50%
  -webkit-transform translateY(-50%)
  transform translateY(-50%)
}

//水平居中
.public-center-horizontally{
  position absolute
  left 50%
  -webkit-transform translateX(-50%)
  transform translateX(-50%)
}



.option-input {
  width: $rem(25px);
  height: $rem(25px);
  display: inline-block;
  
  outline: none;
  margin 0
  padding 0
  background: #fff;
  border: $rem(1px) solid #eee;
  color: #fff;
  cursor: pointer;
  position: relative;
  top :0 
  z-index: 1000;
}
.option-input.radio {
  border-radius: 50%;
}
.option-input.radio::after {
  border-radius: 50%;
}
.option-input:checked::before {
  width $rem(10px)
  height $rem(10px)
  border-radius $rem(5px)
  background $dark-yellow-color
  position: absolute
  left 50%
  top 50%
  margin-left $rem(-5px)
  margin-top $rem(-5px)
  display: inline-block;
  content: '';
}

.total-nav{
  background #f5f5f5
  position absolute
  bottom 0
  left 0
  width 100%
  border-top $rem(1px) solid #eee
  ul{
    display flex
    flex-direction row
    justify-content space-around
    flex-wrap nowrap
    li{
      width 25%
      border-right $rem(1px) solid #eee
      a{
        height $rem(26px)
        text-align center
        display block
        padding-top $rem(45px)
        font-size $rem(14px)
      }
      &:first-child{
        a{
          background url('../image/common/home2.png') no-repeat center $rem(10px)
          background-size $rem(30px 30px)
        }      
      }
      &:first-child.active{
        a{
          background url('../image/common/home3.png') no-repeat center $rem(10px)
          background-size $rem(30px 30px)
        }      
      }
      &:nth-child(2){
        a{
          background url('../image/common/thumbnails1.png') no-repeat center $rem(10px)
          background-size $rem(29px 29px)
        }      
      }
      &:nth-child(2).active{
        a{
          background url('../image/common/thumbnails2.png') no-repeat center $rem(10px)
          background-size $rem(29px 29px)
        }      
      }
      &:nth-child(3){
        a{
          background url('../image/common/cart.png') no-repeat center $rem(10px)
          background-size $rem(33px 33px)
        }      
      }
      &:nth-child(3).active{
        a{
          background url('../image/common/cart2.png') no-repeat center $rem(10px)
          background-size $rem(33px 33px)
        }      
      }
      &:nth-child(4){
        a{
          background url('../image/common/user2.png') no-repeat center $rem(10px)
          background-size $rem(20px 28px)
        }
        border 0
      }
      &:nth-child(4).active{
        a{
          background url('../image/common/user.png') no-repeat center $rem(10px)
          background-size $rem(20px 28px)
        }
      }
    }
  }
  .active{
    setLinerBackgroundColor()
    color #fff
    height $rem(80px)
    line-height @height !important
    a{
      padding $rem(20px)
      color #fff
    }
  }
}

.detai-foot{
  .left{  
    padding 0 !important
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap nowrap
    font-size $rem(16px)
    .item{
      width 100%
      height 100%
      border-right $rem(1px) solid #e8e8e8
      &:last-child{
        border 0
      }
      a{
        display block
        padding-top $rem(35px)
        text-align center
      }
      &:first-child{
        background url('../image/common/messages1.png') no-repeat center $rem(5px)
        background-size $rem(31px 31px)
      }
      &:nth-child(2){
        background url('../image/index/index-icon-02.png') no-repeat center $rem(5px)
        background-size $rem(27px 27px)
      }
      &:nth-child(3){
        background url('../image/common/cart.png') no-repeat center $rem(5px)
        background-size $rem(31px 30px)
      }
    }
  }
}


