@import "../common/commponent"
@import "../common/base"
@import "../common/common"
@import "../common/tab"

.other
	$tab()
	.cont
		background-color #181818
		padding-top 0
	.cont .item
		padding $rem(0px 20px)
		margin-bottom $rem(30px)
		background-color #242424
	.item-on
		display flex 
		align-items center
		.item-left
			width 25%
			img
				width 100%
		.item-main
			flex 2
			padding $rem(30px 0px 20px 40px)
			h4
				font-size $rem(24px)
				color #fff
				margin-bottom $rem(10px)
			.ftitle
				font-size $rem(24px)
				color #fff
				margin-bottom $rem(30px)
			.desc
				font-size $rem(30px)
				color #b7b1b1
				line-height $rem(24px)
				margin-bottom $rem(10px)
			.price
				font-size $rem(18px)
				color #ea0f30
				text-align right
	.item-down
		display flex
		justify-content space-between
		border-top $rem(1px) solid #707070
		padding $rem(20px 0)
		.item-left
			flex 1
			vertical-align middle
			color #fff
			img
				max-width 100%
				margin-right $rem(10px)
				vertical-align middle
		.item-main
			flex 1
			display flex
			justify-content flex-end
			.btn
				width $rem(188px)
				height $rem(50px)
				line-height @height
				background-color #7e0000
				color #fff
				text-decoration none
				text-align center